{
	"name": "pl_transacciones",
	"properties": {
		"activities": [
			{
				"name": "Copy Data On prem to Bronze",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "FileServerReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "ID_PERSONA",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "ID_PERSONA",
									"type": "String",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "ID_EMPRESA",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "ID_EMPRESA",
									"type": "String",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "MONTO",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "MONTO",
									"type": "String",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "FECHA",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "FECHA",
									"type": "String",
									"physicalType": "String"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ds_fs_csv_transacciones",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_adls_csv_democlase4",
						"type": "DatasetReference",
						"parameters": {
							"container": "datalake",
							"path": "bronze/file_system/csv",
							"file_name": "transacciones.csv"
						}
					}
				]
			},
			{
				"name": "Transformacion bronze to silver",
				"type": "DatabricksNotebook",
				"dependsOn": [
					{
						"activity": "Copy Data On prem to Bronze",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebookPath": "/Users/deygerson_mendez@outlook.com/Transformaci√≥n de Datos con Azure Databricks",
					"baseParameters": {
						"monto": {
							"value": "@pipeline().parameters.monto",
							"type": "Expression"
						},
						"id_empresa": {
							"value": "@pipeline().parameters.id_empresa",
							"type": "Expression"
						}
					}
				},
